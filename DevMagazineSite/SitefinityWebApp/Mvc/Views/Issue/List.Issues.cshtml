@model DevMagazine.Issues.Mvc.Models.IIssueModel

@{
    var items = Model.Issues;
}

<section class="section section--gray">
    @Html.Partial("List.LatestIssueRight", Model)
</section>

<section class="section section--border">
    <div class="container">
        <h4>Archive</h4>
        <hr>
        <div id="issues-list">
            <div class="row">
                @foreach (var issue in @items.Skip(1).Take(3))
                {
                    @Html.Partial("IssueElement", issue)
                }
            </div>
            <div class="row">
                @foreach (var issue in @items.Skip(4).Take(3))
                {
                    @Html.Partial("IssueElement", issue)
                }
            </div>

           @Html.Partial("EndlessPager", Model)
        </div>
    </div>
</section>
