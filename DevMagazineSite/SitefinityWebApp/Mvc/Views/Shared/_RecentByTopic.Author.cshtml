@model IList<Telerik.Sitefinity.Frontend.Mvc.Models.ItemViewModel>

@using Telerik.Sitefinity.News.Model;
@using Telerik.Sitefinity.RelatedData;
@using DevMagazine.Core.Mvc.Helpers;
@using SitefinityWebApp.Mvc.ViewModels;

@{
    var newsItems = Model;

    int counter = 0;
    int maximumItemsPerRow = 3;
    int newsItemsCount = newsItems.Count;
}

@foreach (var newsItem in newsItems)
{
    if (counter % maximumItemsPerRow == 0)
    {
        @:<div class="row">
    }

    <div class="col-md-4 article">
        <h3><a href="@newsItem.DefaultUrl">@newsItem.Fields.Title</a></h3>
        <p>
            @newsItem.Fields.Summary
        </p>
            <a href="@newsItem.DefaultUrl">Read more</a>

            @(Html.Partial("~/Mvc/Views/Shared/_FeaturedArticle.Author.cshtml",
                AuthorViewModel.GetAuthorViewModel(
                    ((Telerik.Sitefinity.DynamicModules.Model.DynamicContent)(newsItem.Fields.ArticleAuthor.DataItem)), (NewsItem)newsItem.DataItem)))
    </div>

    counter++;

    if (counter == maximumItemsPerRow || (counter > 0 && (counter % maximumItemsPerRow == 0)) || counter == newsItemsCount)
    {
        @:</div>
    }
}
