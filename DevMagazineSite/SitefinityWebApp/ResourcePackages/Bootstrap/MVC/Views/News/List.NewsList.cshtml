@model News.Mvc.Models.NewsModel

@using News.Mvc.Models;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

@if (!SitefinityContext.IsBackend && !Telerik.Sitefinity.Services.SystemManager.IsInlineEditingMode)
{
    @Html.Script("//code.jquery.com/jquery-1.8.3.min.js")
}

<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<div class="row @Model.ListCssClass">
    @foreach (var item in Model.Items)
        {
            using (Html.InlineEditingRegion(Model.ProviderName, "Telerik.Sitefinity.News.Model.NewsItem", item.Id))
            {
                <div class="col-md-4">
                    <h3>
                        @Html.ActionLink(item.Title, item.ItemDefaultUrl)
                    </h3>
                    <p>@Html.Raw(Html.TextField("Summary", item.Summary, "ShortText"))</p>
                    @Html.ActionLink("Read More", item.ItemDefaultUrl)
                </div>
            }
        }


    @if (Model.DisplayMode == ListDisplayMode.Paging && Model.TotalPagesCount != null && Model.TotalPagesCount > 1)
    {
        @Html.Action("Index", "ContentPager", new { currentPage = Model.CurrentPage,
                        totalPagesCount = Model.TotalPagesCount.Value,
                        redirectUrlTemplate = ViewBag.RedirectPageUrlTemplate })
    }

</div>